<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="tm.android.chronos"
          android:versionCode="2"
        android:versionName="0.2.0">
    <uses-sdk android:minSdkVersion="17" android:targetSdkVersion="21"/>

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:allowBackup="true">
        <activity android:name=".activity.Chronos" android:screenOrientation="nosensor" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ChronometerActivity" android:screenOrientation="nosensor" android:label="@string/app_name_stopwatches">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
